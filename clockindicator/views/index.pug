          canvas.with-border.Bgray(id='job2', data-source='1', ng-click="clicked($event)", chart-data='data', chart-options='options', chart-dataset-override='datasetOverride')
        a.col-sm-6.col-md-3.text-center
          canvas.with-border.Bgray(id='job3', data-source='2', ng-click="clicked($event)", chart-data='data', chart-options='options', chart-dataset-override='datasetOverride')
        a.col-sm-6.col-md-3.text-center
          canvas.with-border.Bgray(id='job4', data-source='3', ng-click="clicked($event)", chart-data='data', chart-options='options', chart-dataset-override='datasetOverride')
        a.col-sm-6.col-md-3.text-center
          canvas.with-border.Bgray(id='job5', data-source='4', ng-click="clicked($event)", chart-data='data', chart-options='options', chart-dataset-override='datasetOverride')
